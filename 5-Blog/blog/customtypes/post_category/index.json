{
  "format": "page",
  "id": "post_category",
  "label": "Post Category",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "config": {
          "label": "UID",
          "placeholder": ""
        },
        "type": "UID"
      },
      "category": {
        "type": "Select",
        "config": {
          "label": "categoria",
          "placeholder": "",
          "options": ["Homebrew", "D&D", "VTM", "Tormenta"],
          "default_value": "Homebrew"
        }
      },
      "posts": {
        "type": "Link",
        "config": {
          "label": "relação de posts",
          "select": "document",
          "customtypes": ["blog_post"]
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "main_image": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      },
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      }
    }
  }
}
