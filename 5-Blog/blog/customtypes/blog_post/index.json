{
  "format": "page",
  "id": "blog_post",
  "label": "Blog Post",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "config": {
          "label": "UID"
        },
        "type": "UID"
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "título",
          "placeholder": ""
        }
      },
      "post_image": {
        "type": "Image",
        "config": {
          "label": "Imagem Do Post",
          "constraint": {},
          "thumbnails": []
        }
      },
      "paragraph": {
        "type": "Group",
        "config": {
          "label": "Parágrafo",
          "repeat": true,
          "fields": {
            "title": {
              "type": "Text",
              "config": {
                "label": "Título do Paragrafo",
                "placeholder": "deixar vazio caso não haja"
              }
            },
            "content": {
              "type": "Text",
              "config": {
                "label": "Conteúdo do Parágrafo",
                "placeholder": ""
              }
            }
          }
        }
      },
      "autor": {
        "type": "Text",
        "config": {
          "label": "Autor",
          "placeholder": ""
        }
      },
      "category": {
        "type": "Select",
        "config": {
          "label": "categoria",
          "placeholder": "",
          "options": ["Homebrew", "D&D", "VTM", "Tormenta"],
          "default_value": "Homebrew"
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {}
        }
      }
    },
    "SEO & Metadata": {
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      },
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      }
    }
  }
}
