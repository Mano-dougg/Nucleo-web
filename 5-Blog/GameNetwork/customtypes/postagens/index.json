{
  "format": "page",
  "id": "postagens",
  "label": "Postagens",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "config": {
          "label": "UID"
        },
        "type": "UID"
      },
      "titulo": {
        "type": "Text",
        "config": {
          "label": "Titulo",
          "placeholder": "Titulo da postagem"
        }
      },
      "imagem": {
        "type": "Image",
        "config": {
          "label": "Imagem",
          "constraint": {
            "width": null,
            "height": null
          },
          "thumbnails": []
        }
      },
      "thumb": {
        "type": "Embed",
        "config": {
          "label": "Thumb",
          "placeholder": ""
        }
      },
      "resumo": {
        "type": "Text",
        "config": {
          "label": "Resumo",
          "placeholder": ""
        }
      },
      "tag": {
        "type": "Select",
        "config": {
          "label": "Tag",
          "placeholder": "",
          "options": ["Jogos", "Filmes", "Séries"],
          "default_value": "Jogos"
        }
      },
      "novidade": {
        "type": "Boolean",
        "config": {
          "label": "Novidade",
          "placeholder_false": "false",
          "placeholder_true": "true",
          "default_value": false
        }
      },
      "texto": {
        "type": "StructuredText",
        "config": {
          "label": "Texto",
          "placeholder": "Texto da postagem",
          "allowTargetBlank": true,
          "multi": "paragraph,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,list-item,o-list-item,image,embed"
        }
      },
      "autor": {
        "type": "Text",
        "config": {
          "label": "Autor",
          "placeholder": "Autor da postagem"
        }
      },
      "data": {
        "type": "Date",
        "config": {
          "label": "Data",
          "placeholder": "Data da postagem"
        }
      },
      "rota": {
        "type": "Link",
        "config": {
          "label": "Rota",
          "placeholder": "Link para a página do post",
          "allowTargetBlank": false,
          "select": null
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {}
        }
      }
    },
    "SEO & Metadata": {
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      },
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      }
    }
  }
}
