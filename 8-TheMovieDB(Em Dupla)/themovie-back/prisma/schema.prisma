generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../database.db"
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
  email String
  favoritos Favoritos[]
}

model Favoritos {
  id            Int    @id @default(autoincrement())
  title         String  @unique
  poster_path   String
  release_date  String
  overview      String
  userId    Int
  user      User    @relation(fields: [userId], references: [id])
}


model logado{
  id Int @id @default(autoincrement())
  username String @unique
  userid Int
}